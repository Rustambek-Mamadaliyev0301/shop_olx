<%- include("parts/header")  %> 
<% var error  %> 

<div class="ads text-light" style="padding:80px">
    <div class="container ">
     
          
              <div class="row  d-flex justify-content-center align-items-center">
                <h2 class= "text-center" style="color:rgb(250, 205, 4)">Post Ads</h2>
                
                <div class="col-md-10 col-lg-10 g-3">
                    
                  <form class="needs-validation row g-3"method="POST"  enctype="multipart/form-data" novalidate>
                    <% if(error) {%> 
                      <div class="alert my-2 alert-danger">
                          <%= error  %> 
                      </div>
                  <% } %> 
                      <div class="col-sm-6">
                        <label for="adsName" class="form-label">Ads name</label>
                        <input type="text" minlength="4" class="form-control" placeholder="ads name" name="title" id="firstName" placeholder=""  required   />
                      
                      </div>
          
               
                    
                      <div class="col-sm-6">
                        <label for="Phone number" class="form-label">Phone number</label>
                        <input type="tel" class="form-control" min="8"  name="number" id="lastName" placeholder="+998931487733" value="" required />
                     
                      </div>
          
          
                      <div class="col-sm-6">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" name="address" class="form-control" id="address" placeholder="1234 Main St" required />
                      
                      </div>
                      <div class="col-sm-6">
                        <label for="category" class="form-label">Kategory</label>
                       <select name="category" class="form-control" id="" required>
                         <% for(let category of categories) { %>
                          <option value="<%= category._id %>">
                            <%= category.name %>
                          </option>

                          <% } %>
                       </select>
                      
                      </div>
                      

          
                      <div class="col-sm-6">
                        <label for="formFile" class="form-label">Image upload</label>
                        <input class="form-control"
                        type="file"
                        name="file"
                        multiple
                        accept=".png, .jpeg, .jpg" />
                      </div>
                      <div class="col-sm-6">
                        <label for="number" class="form-label">Price</label>
                        <input class="form-control" placeholder="Cost" name="price" type="number" id="formFile" />
                      </div>
                      <div class="col-12">
                        <label for="About"minlength="5" class="form-label">Ads about</label>
                        <textarea class="form-control"name="description" placeholder="Ads about" required />

                        </textarea>
                      </div>
                  
                    
          
                    <hr class="my-4">
          
                  
          

          
                    <button class="w-100 btn btn-outline-primary btn-lg" type="submit">Send messages</button>
                  </form>
                </div>
              </div>
            
          
          
          
        
    </div>
</div>

<%- include("parts/footer")  %> 